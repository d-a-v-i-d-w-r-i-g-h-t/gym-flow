
<div class="discoverAll">
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle sortbtn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Sort By
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/discover/oldest">Date (Oldest)</a></li>
            <li><a class="dropdown-item" href="/discover/newest">Date (Newest)</a></li>
        </ul>
        <h2>Routines  <i class="fa-solid fa-down-long fa-bounce" style="color: #34495e;"></i></h2>
        {{#each routines as |routine|}}
        <div class="routine-nav">
            <a href="#{{routine.id}}">
        <button class="routine-btn">{{routine.routine_name}}</button>
        </a>
        </div>
        {{/each}}
    </div>
    <div class="discover">
        {{#each routines as |routine| }}
        <div class="cardy">
            <div class="discover-post">
                <div>
                    <button id="{{routine.id}}">@{{routine.user.user_name}}</button>
                    <p><span class="routine-description">{{routine.description}}</span></p>
                    <p>Date Created: {{formatDate routine.date_created}}</p>
                </div>
                <div class="dataTable">
                    <table>
                        <h2><span class="routine-name">{{routine.routine_name}}</span></h2>
                        <thead class="tableHeaders">
                            <tr>
                                <th width="200">Name</th>
                                <th>Weight</th>
                                <th width="150">Reps</th>
                            </tr>
                        </thead>
                        {{#each routine.exercises as |exercise|}}
                        <tbody>
                            <tr class="trow">
                                <td class="dataName">{{exercise.name}}</td>
                                <td>{{exercise.weight}}</td>
                                <td>{{exercise.reps}}</td>
                            </tr>
                        </tbody>
                        {{/each}}
                    </table>
                </div>
            </div>
            <Div class="action">
                <button
                    class="like-button bottom-left-btn"
                    data-routine-id="{{routine.id}}"
                    data-liked="{{#if userLiked}}true{{else}}false{{/if}}">
                    <span class="like-count">{{likeCount}}</span>
                    <i
                        class="
                            {{#if userLiked}}
                            fa-solid
                            {{else}}
                            fa-regular
                            {{/if}} fa-thumbs-up"
                    >
                    </i>
                </button>
                <button class="comment-button">
                    <i class="fa-regular fa-comment"></i>
                </button>
                <button class="share-button">
                    <i class="fa-solid fa-up-right-from-square"></i>
                </button>
                <button class="save-button bottom-right-btn">
                    <i class="fa-regular fa-floppy-disk"></i>
                </button>
            </Div>
        </div>
        {{/each}}
    </div>
</div>