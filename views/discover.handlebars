{{#each routines as |routine| }}
<div class="card">
    <div class="col-md-6">
        <h2>{{routine.name}}</h2>
        <p>{{routine.description}}</p>
        <p>Created by: {{routine.user.user_name}}</p>
        <table>
            <tr>
                <th>Name</th>
                <th>Weight</th>
                <th>Reps</th>
            </tr>
            {{#each routine.exercises as |exercise|}}
            <tr>
                <td>{{exercise.name}}</td>
                <td>{{exercise.weight}}</td>
                <td>{{exercise.reps}}</td>
            </tr>
            {{/each}}
        </table>
        <p>Date Created: {{routine.date_created}}</p>
    </div>
</div>
{{/each}}